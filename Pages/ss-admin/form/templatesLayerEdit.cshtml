@page
@{ Layout = "_Layout"; }

<el-alert v-if="isSystem" type="warning">
  提示： {{ name }} 为系统模板，编辑此模板需要克隆至指定文件夹
</el-alert>

<div v-if="type == 'clone'" class="form-group">
  <label> 克隆模板： {{ name }} </label>
</div>
<div class="form-group">
  <label> 模板文件夹
  </label>
  <input v-model="templateInfo.name" type="text" class="form-control">
</div>
<div class="form-group">
  <label> 模板说明 </label>
  <textarea v-model="templateInfo.description" class="form-control"></textarea>
</div>
<hr />
<div class="text-right mr-1">
  <button type="button" class="btn btn-primary m-l-5" v-on:click="btnSubmitClick">确 定</button>
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">取 消</button>
</div>

@section Scripts{
  <script src="/assets/form/js/templatesLayerEdit.js" type="text/javascript"></script>
}