@page
@{ Layout = "_Layout"; }

<div class="form-row">
  <div v-for="attributeName in attributeNames" class="form-group col-md-6">
    <label class="col-form-label">
      <strong>{{ getAttributeText(attributeName) }}</strong>
    </label>
    <span class="ml-2" v-html="getAttributeValue(attributeName)"></span>
  </div>
</div>
<div class="form-group">
  <label class="col-form-label"> 回复内容 <small v-show="errors.has('replyContent')" class="text-danger">{{
      errors.first('replyContent') }}</small>
  </label>
  <textarea style="height: 150px" v-model="dataInfo.replyContent" name="replyContent" data-vv-as="回复内容" v-validate="'required'"
    :class="{'is-invalid':errors.has('replyContent') }" type="text" class="form-control"></textarea>
</div>
<hr />
<div class="text-right mr-1">
  <button type="button" class="btn btn-primary m-l-5" v-on:click="btnSubmitClick">确 定</button>
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">取 消</button>
</div>

@section Scripts{
  <script src="/assets/form/js/dataLayerReply.js" type="text/javascript"></script>
}